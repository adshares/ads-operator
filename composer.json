{
    "name": "adshares/ads-operator",
    "description": "ADS Operator - Blockexplorer",
    "type": "project",
    "license": "proprietary",
    "keywords": [
        "adshares",
        "ads",
        "php",
        "esc"
    ],
    "homepage": "https://github.com/adshares/ads-manager",
    "support": {
        "issues": "https://github.com/adshares/ads-manager/issues",
        "source": "https://github.com/adshares/ads-manager"
    },
    "authors": [
        {
          "name": "Adshares",
          "homepage": "https://adshares.pl/team"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-mongodb": "*",
        "ext-json": "*",
        "alcaeus/mongo-php-adapter": "^1.1",
        "doctrine/mongodb-odm-bundle": " ^3.0",
        "jms/serializer-bundle": "^2.4",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.3",
        "symfony/yaml": "^4.1",
        "nelmio/api-doc-bundle": "^3.2",
        "symfony/twig-bundle": "^4.1",
        "symfony/asset": "^4.1",
        "adshares/ads-client": "^1.2",
        "lexik/jwt-authentication-bundle": "^2.5",
        "symfony/validator": "^4.1",
        "stof/doctrine-extensions-bundle": "^1.3",
        "php-amqplib/php-amqplib": "^2.7",
        "symfony/proxy-manager-bridge": "^4.1",
        "symfony/swiftmailer-bundle": "^3.2",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/lock": "^4.1",
        "symfony/dotenv": "^4.1",
        "twig/twig": "~2.0"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/symfony2-extension": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "~7.0",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.3",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpstan/phpstan-doctrine": "^1.3",
        "symfony/var-dumper": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "optimize-autoloader": true,
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "bin-dir": "vendor/bin",
        "allow-plugins": {
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Adshares\\AdsOperator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adshares\\AdsOperator\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "qa-check": [
            "php bin/console lint:yaml config --parse-tags",
            "parallel-lint --no-colors --blame --exclude vendor --exclude bin .",
            "phpcs -s",
            "phpstan --no-ansi --no-progress analyse -c phpstan.neon -l 7 src tests"
        ],
        "test": "phpunit",
        "test-coverage": "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-text",
        "test-ci": "@test-coverage --coverage-clover ./var/phpunit/coverage.xml --log-junit ./var/phpunit/logfile.xml",
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "/bin/bash -c '(source .env && if [ -f \".env.local\" ]; then source .env.local; fi && php -S ${APP_HOST:-localhost}:${APP_PORT:-8000} -t public dev-router.php)'"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        },
        "symfony": {
            "allow-contrib": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
